@model STUDENTEVOTINGAPP.DTOs.VoterDto.CreateRequest

@{
    ViewData["Title"] = "Create";
}

<h1>Voter Registration</h1>
<hr />
<div class="row"z>
    <div class="col-md-4">
        <form asp-action="Create">
            @if (ViewBag.Message != null)
            {
                <div style="color:red" font-weight: bolder; padding: 5px>
                    <p class="alert alert-warning alert-dismissible" role="alert">@ViewBag.Message</p>
                    <label style="text-align: center"> </label>
                </div>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MatricNumber" class="control-label"></label>
                <input asp-for="MatricNumber" class="form-control" />
                <span asp-validation-for="MatricNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
