@model STUDENTEVOTINGAPP.DTOs.VoteDto.VoteRequestModel

@{
    ViewData["Title"] = "Results";
}

<h1>Election Result</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetVotesByCandidateId">
            @if (ViewBag.Message != null)
            {
                <div style="color:red" font-weight: bolder; padding: 5px>
                    <p class="alert alert-warning alert-dismissible" role="alert">@ViewBag.Message</p>
                    <label style="text-align: center"> </label>
                </div>
            }
            <div class="form-group">
                <label asp-for="CandidateId" class="control-label"></label>
                <select style="scrollbar-3dlight-color:blue" asp-for="CandidateId" asp-items="ViewBag.Candidates" required> </select>
                <span asp-validation-for="CandidateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="View" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
