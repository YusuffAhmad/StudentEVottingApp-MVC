@model STUDENTEVOTINGAPP.DTOs.PositionDto.PositionDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Position</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <select asp-for="ElectionId" asp-items="ViewBag.Elections"> </select>
                <span asp-validation-for="Election" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Admin" asp-action="Index">Back to DashBoard</a>
</div>